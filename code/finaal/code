#include "arduino_secrets.h"
#include <ArduinoIoTCloud.h>
#include <ArduinoIoTCloudTCP.h>
#include <utility/ota/OTA.h>

#include <Arduino_ConnectionHandler.h>
/* 
  Sketch generated by the Arduino IoT Cloud Thing "Untitled"
  https://create.arduino.cc/cloud/things/7d40d210-463d-4dcd-b4bb-81ec91d18c88 

  Arduino IoT Cloud Variables description

  The following variables are automatically generated and updated when changes are made to the Thing

  int moisture;
  int thresholdHigh;
  int thresholdLow;
  bool pump;

  Variables which are marked as READ/WRITE in the Cloud Thing will also have functions
  which are called when their values are changed from the Dashboard.
  These functions are generated with the Thing and added at the end of this sketch.
*/

#include "thingProperties.h"

unsigned long previousMillis;
unsigned long sampleRate = 1000;

void setup() {
  // Initialize serial and wait for port to open:
  Serial.begin(115200);
  Serial.println("staat aan");
  delay(1000);

  // fix for LOLIN C3 mini V1.0 tx power bug
  WiFi.begin();
  WiFi.setTxPower(WIFI_POWER_8_5dBm);


  initProperties();
  ArduinoCloud.begin(ArduinoIoTPreferredConnection);
  setDebugMessageLevel(4);
  ArduinoCloud.printDebugInfo();

  pinMode(1, OUTPUT);
  previousMillis = millis();
}

void loop() {
  ArduinoCloud.update();

  if ((unsigned long)(millis() - previousMillis > sampleRate))
  {
    moisture = analogRead(A0); 
    previousMillis = millis();
  }
  //invertedMoisture zodat laag niveau = laag water
  invertedMoisture = 4095 - moisture;

  if (invertedMoisture < thresholdLow) pump = true;
  else if (invertedMoisture > thresholdHigh) pump = false;
  digitalWrite(1, pump);
}


/*
  Since ThresholdLow is READ_WRITE variable, onThresholdLowChange() is
  executed every time a new value is received from IoT Cloud.
*/
void onThresholdLowChange()  {
  // Add your code here to act upon ThresholdLow change

}

/*
  Since ThresholdHigh is READ_WRITE variable, onThresholdHighChange() is
  executed every time a new value is received from IoT Cloud.
*/
void onThresholdHighChange()  {
  // Add your code here to act upon ThresholdHigh change

}
